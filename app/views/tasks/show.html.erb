<div class="container w-100% text-center">
  <h1><%=@task.title%></h1>
  <h2><%=@task.details%></h2>
  <h3><%=@task.completed == true ? "Done!" : "To do!" %></h3>

  <%=link_to "Delete this task",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure you want to delete the task?"} %>
</div>
<div class="container w-100% text-center">
<%=link_to "Go to the list", tasks_path%>
</div>
